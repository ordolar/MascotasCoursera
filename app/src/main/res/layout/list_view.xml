<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailIcon"
                android:scaleType="center"

                android:layout_alignParentRight="true"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/huesobtn"
                android:layout_below="@id/detailIcon"
                android:src="@drawable/hueso"
                android:padding="5dp"
                tools:background="@drawable/btn_transparent"
                android:onClick="likes"
              />

            <TextView
                android:layout_below="@id/detailIcon"
                android:layout_toRightOf="@id/huesobtn"
                android:id="@+id/headerTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge"
                android:padding="5dp"
                />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/likesIV"
                android:layout_below="@id/detailIcon"
                android:layout_alignParentEnd="true"
                android:src="@drawable/likes"
                android:padding="5dp"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/detailsTV"
                android:layout_below="@id/detailIcon"
                android:layout_toRightOf="@id/headerTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceLarge"
                android:padding="5dp"
                android:text="Likes:"
                 />




        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>